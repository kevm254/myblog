<section class="row">

  <% @portfolio.each do |portfolio| %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header"><h4 class="card-title"><%= portfolio.site_name %></h4></div>
        <div class="card-block">
          <p class="card-text"><%= portfolio.description %></p>
          <%= link_to "Visit Site", "#{portfolio.site_link}", class: 'btn btn-success' %>

        </div>
      </div>
    </div>
  <% end %>

</section>


